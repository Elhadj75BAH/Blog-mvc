{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container bg-light my-5 pt-5 pb-3" >
        <div class="form_register" >
            <h1 class="text-center">Connectez-vous</h1>
            {% if error %}
                <div class="bg bg-danger text-light w-100 p-2"> {{ error }}</div>
            {% endif %}
            {% if success %}
                <div class="bg bg-success text-light w-100 p-2"> {{ success }}</div>
            {% endif %}
            <form method="POST" >
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10 col-md-12 col-sm-12">
                        <input type="email" class="form-control" id="inputPassword" placeholder="Entrez votre email en sécurité"
                               name="email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="motdepasse" class="col-sm-2 col-form-label">Mot de passe</label>
                    <div class="col-sm-10 col-md-12 col-sm-12">
                        <input type="password" class="form-control" id="motdepasse" placeholder="Entrez votre mot de passe en sécurité"
                               name="motdepasse" required>
                    </div>
                </div>
                <div class=" pb-3 pt-3">
                    <button type="submit" name="login" class="btn btn-outline-dark  " value="login">Je me connecte</button>
                    <a href="/Users/register" class="btn btn-outline-dark my-3">Page inscription</a>
                </div>
            </form>
        </div>
    </div>

{% endblock %}