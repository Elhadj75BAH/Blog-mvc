{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container bg-white pt-3 pb-5">
        <div class="pb-2">
            <h1 class="text-center my-4">Me Contacter</h1>
            <form method="POST" >
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" id="nom" placeholder="Votre Nom" name="nom" required>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="prenom" placeholder="Votre PrÃ©nom" name="prenom" required>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <input type="email" class="form-control" id="email" placeholder="email@email.com" name="email" required>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="subject" placeholder="Sujet" name="subject" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="message" class="col-sm-3 col-form-label">Votre Message</label>
                    <div class="col pb-2">
                        <textarea class="form-control" id="message" placeholder="Message" name="message" rows="7" required ></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-danger w-25">Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}